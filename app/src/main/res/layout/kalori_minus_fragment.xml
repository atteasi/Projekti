<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Poista Kaloreita"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/liikunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="663dp"
        android:text="Liikunta:" />
    <TextView
        android:id="@+id/kalorit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="332dp"
        android:layout_marginBottom="580dp"
        android:text="Kalorit:" />

    <EditText
        android:id="@+id/liikunta_edit"
        android:layout_width="291dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="609dp"
        android:text="Liikunta"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
    android:id="@+id/kalorit_edit"
    android:layout_width="226dp"
    android:layout_height="48dp"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="161dp"
    android:layout_marginEnd="169dp"
    android:layout_marginRight="120dp"
    android:inputType="number"
    android:layout_marginBottom="522dp"
    android:text="Kalorit" />

    <Button
        android:id="@+id/nappi"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="312dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="569dp"
        android:backgroundTint="@color/purple_200"
        android:text="Add" />

    <ListView
        android:id="@+id/liikuntalista"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="10dp"
        android:background="#ECEAEA" />
</RelativeLayout>
